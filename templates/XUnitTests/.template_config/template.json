{
  "$schema": "http://json.schemastore.org/template",
  "author": "Camron Frenzel",
  "classifications": [ "cfrenzel", "core", "xunit", "integration" ],
  "tags": {
    "language": "C#"
  },
  "identity": "cfrenzel.console",
  "name": "cfrenzel.xunit.unit",
  "shortName": "cf-xUnit",
  "sourceName": "SolutionName",
  "sources": [
    {
      "modifiers": [
        { "exclude": [ ".vs/**", ".template_config/**" ] }
      ]
    }
  ],

  "primaryOutputs": [
    { "path": "SolutionName.UnitTests/SolutionName.UnitTests.csproj" }
  ],
  "guids": [
    "FFFFFFFF-FFFF-FFFF-FFFF-FFFFFFFFFFFF"
  ],
  "symbols": {
    "projName": {
      "type": "parameter",
      "datatype": "string",
      "description": "",
      "defaultValue": "IntegrationTests",
      "fileRename": "IntegrationTests"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "postActions": [
    {
      "description": "Add project to solution",
      "manualInstructions": [],
      "primaryOutputIndexes": "0",
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}